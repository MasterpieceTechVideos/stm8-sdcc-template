// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "STM8 SDCC Template Dev Container",

	// 'build' configures the container image that will be used to create the dev container.
	// Comment out 'build' to use a pre-built image defined below in 'image'.
	"build": {"context": "..", "dockerfile": "Dockerfile", "args": { } },

	// Use 'image' as an alternative to 'build' to use a pre-built local image.
	// build local image first using commands: 		docker build -t local-images/stm8-sdcc-template .devcontainer
	// then uncomment the next line to use it as the dev container image.
	//"image": "local-images/stm8-sdcc-template",

	"runArgs": [
		"--volume=/dev:/dev",
		"--device-cgroup-rule=c *:* rmw",
		"--rm",
		"--quiet"
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	//"forwardPorts": [],

	// Uncomment the next line to run commands after the container is created.
	// "postCreateCommand": "cat /etc/os-release",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-themes"
			]
		}
	}

	// Uncomment to connect as an existing user other than the container default. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "devcontainer"
}
